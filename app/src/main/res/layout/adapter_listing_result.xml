<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_result_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titleResultDefault"
            android:textSize="20dp"
            android:textColor="@color/textColorDefault"
            />

        <ImageView
            android:id="@+id/img_result_id"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/default_image"
            android:layout_below="@+id/title_result_id"
            />

        <TextView
            android:id="@+id/text_description_result_id"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:textColor="@color/textColorDefault"
            android:text="@string/descriptionResultDefault"
            android:layout_below="@+id/title_result_id"
            android:layout_toRightOf="@+id/img_result_id"
            />
    </RelativeLayout>
</LinearLayout>